link graphics
procedure main()
local x, y
WOpen("size=50,50") 
repeat {
case Event() of {
&lpress: {
DrawPoint(&x, &y)
x :=&x
y:=&y
}
&ldrag: {
DrawLine(x, y, &x, &y)
x :=&x
y:=&y
}
&rpress | &rdrag: {
EraseArea(&x - 2, &y - 2,5,5)
}
"g": Fg("black")
"h": Fg("red")
"a": Fg("green")
"s": Fg("blue")
"z": WriteImage("fg01.png")
"q": exit()
}
}
end
